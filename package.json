{
  "name": "backend-nodejs-api-typescript-postgresql-typeorm-boilerplate",
  "author": "Ednilson Amaral <ednilsonamaral@gmail.com>",
  "license": "MIT",
  "private": true,
  "version": "1.0.0",
  "description": "Boilerplate for a Node.js API with Typescript, PostgreSQL, TypeORM and InversifyJS",
  "main": "index.js",
  "engines": {
    "node": ">=20.10.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "clean-install": "yarn install --immutable --prefer-offline --frozen-lockfile",
    "prebuild": "rm -rf dist",
    "build": "npx tsc -p tsconfig.json",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "start": "npm run start:local",
    "start:local": "nodemon --watch src --ext ts,tsx --exec ts-node src/index.ts --respawn --transpileOnly --env development",
    "start:dev": "ts-node-dev src/index.ts --respawn --transpileOnly",
    "migration:create": "npx typeorm migration:create -n",
    "migration:revert": "npx typeorm migration:revert -n",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "body-parser": "^1.20.2",
    "class-transformer": "^0.5.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cpf-cnpj-validator": "^1.0.3",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-status": "^1.7.3",
    "inversify": "^6.0.2",
    "inversify-express-utils": "^6.4.6",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "memory-cache": "^0.2.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "slugify": "^1.6.6",
    "ts-custom-error": "^3.3.1",
    "typeorm": "^0.2.32",
    "typeorm-seeding": "^1.6.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@faker-js/faker": "^8.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/luxon": "^3.4.0",
    "@types/memory-cache": "^0.2.5",
    "@types/mjml": "^4.7.4",
    "@types/module-alias": "^2.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.8",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/coverage-c8": "^0.31.0",
    "@vitest/coverage-istanbul": "^0.31.0",
    "@vitest/ui": "^0.31.0",
    "class-validator": "^0.14.1",
    "eslint": "^8.1.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.1.1",
    "semantic-release": "^22.0.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
